<!doctype html>
<html lang="pt-br">

<head>
    <%- include('partials/important-head-tags.ejs') %>

        <title>Home | P&R</title>
</head>

<body>
    <%- include('partials/navbar.ejs') %>

        <div class="container">
            <h1>Perguntas</h1>

            <% questions.forEach(questions=> { %>
                <div class="card">
                    <div class="card-body">
                        <h2>
                            <%= questions.title %>
                        </h2>
                    </div>
                    <div class="card-footer">
                        <a href="/pergunta/<%= questions.id %>" class="btn btn-primary">Responder</a>
                    </div>
                </div>
                <% }) %>

        </div>

        <%- include('partials/bootstrap-scripts.ejs') %>
</body>

</html>